{% layout 'layout.liquid' %} {% block content %}
<div class="hello">
  <div class="container-md">
    <article>
      <h2 class="center">{{ vehicles.make }}</h2>
      <h3 class="center">
        {{ vehicles.model }}
      </h3>
      <h4 class="center">Color: {{ vehicles.color }}</h4>
      <h4 class="center">Year: {{ vehicles.year }}</h4>
      <div class="btn-group">
        <a href="{{ vehicles._id }}/edit" class="btn btn-primary" id="color"
          >Edit Vehicle</a
        >
        <form action="{{ vehicles._id }}?_method=DELETE" method="POST">
          <input
            type="submit"
            value="Delete"
            class="btn btn-danger"
            id="color"
          />
        </form>
      </div>
    </article>
    <div class="col-md-6">
      <form action="/comments/{{ vehicles._id }}" method="POST">
        <fieldset>
          <legend>Add comment</legend>
          <label class="form-label">Comment: </label>
          <input
            type="text"
            class="form-control"
            name="note"
            placeholder="Enter comment here"
          />
        </fieldset>
        <input type="submit" class="btn btn-success" value="Add comment" />
      </form>
    </div>
    {% if vehicles.comments.length > 0 %}
    <div class="container-sm justify-content-center">
      <div class="col-md-8 col-lg-6">
        {% for comment in vehicles.comments %} {% render '../comment.liquid'
        comment: comment, userId: userId, vehicle: vehicles, username:
        username%} {% endfor %}
      </div>
    </div>
    {% endif %}
  </div>
</div>
{% endblock %}
